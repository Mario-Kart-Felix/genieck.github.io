function detectAd(){
if (jQuery(".googlead").height() != "0" ){
jQuery("#body").addClass("googleadpage");
jQuery(".googlead").css("margin", "15px auto 1px auto");
jQuery(".googlead").css("padding", "0 11px 11px 0");
}
setTimeout(detectAd, 1000);
}
detectAd();
</script>
