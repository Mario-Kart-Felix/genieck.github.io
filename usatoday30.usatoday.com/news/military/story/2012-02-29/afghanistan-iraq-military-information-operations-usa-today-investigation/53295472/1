window.onresize = function() {init();};

function getVideo(strVideoId) {
document.getElementById("videoIFrame").src = "http://www.usatoday.com/_common/_modal/modal-video.htm?vidId=" + strVideoId;
document.getElementById("flashModalWindow").style.display = "block";
document.getElementById("flashModalVideo").style.display = "block";
document.getElementById("section-nav").style.visibility = "hidden";
document.getElementById("header-sponsorshipBox").style.visibility = "hidden";
} //getVideo

function getPhoto(strPhotoId) {
//alert(strPhotoId);
document.getElementById("photoIFrame").src = "http://www.usatoday.com/_common/_modal/modal-photo.htm?picId=" + strPhotoId;
document.getElementById("flashModalWindow").style.display = "block";
document.getElementById("flashModalPhoto").style.display = "block";
document.getElementById("section-nav").style.visibility = "hidden";
document.getElementById("header-sponsorshipBox").style.visibility = "hidden";
} //getPhoto

function closeModal() {
document.getElementById("flashModalWindow").style.display = "none";
document.getElementById("flashModalVideo").style.display = "none";
document.getElementById("flashModalPhoto").style.display = "none";
document.getElementById("section-nav").style.visibility = "visible";
document.getElementById("header-sponsorshipBox").style.visibility = "visible";
} //closeModal

function init() {
var winW, winH;
if (navigator.appName == "Microsoft Internet Explorer") {
winW = document.body.offsetWidth;
winH = document.documentElement.offsetHeight;
} else {
winW = window.innerWidth;
winH = window.innerHeight;
} //if
document.getElementById("flashModalVideo").style.left = ((winW / 2) - 305).toString() + "px";
document.getElementById("flashModalVideo").style.top = ((winH / 2) - 200).toString() + "px";
document.getElementById("flashModalPhoto").style.left = ((winW / 2) - 397).toString() + "px";
document.getElementById("flashModalPhoto").style.top = ((winH / 2) - 225).toString() + "px";
} //init

if (navigator.hasFlash(10)) {
    var query, flashFile;
    flashFile = "http://i.usatoday.net/news/graphics/2012/info-ops/flash.swf";
    query = document.location.search;
    if (query != "") {
    query = query + "&strFileName=" + window.location.protocol + "//" + window.location.host + window.location.pathname;
    } else {
    query = "?strFileName=" + window.location.protocol + "//" + window.location.host + window.location.pathname;
    }
    query += "&fileurl=20110825-cameron/";
    query += "&preview=false";
