	(function(){
		var hj_param = {};
		hj_param.action = 'returning_user';
		hj_param.threshold = 2;
		hj_param.session = 'grist_hj_session';
		hj_param.count = 'grist_visit_count';
		hj_param.exp = 365;
		hj_param.override = hj_param.override || false;
		var count = 0;
		if ( ! Modernizr.cookies || 'function' !== typeof hj || hj_param.override || 'function' !== typeof Cookies || Cookies.get( hj_param.session ) ) {
			return;
		}
		Cookies.set( hj_param.session, '1' );
		if ( Cookies.get( hj_param.count ) ) {
			count = parseInt( Cookies.get( hj_param.count ) );
		}
		Cookies.set( hj_param.count, ++count,  { expires: hj_param.exp } );
		if ( count > hj_param.threshold ) {
			window.hj( 'trigger', hj_param.action );
		}
	})();
</script>
