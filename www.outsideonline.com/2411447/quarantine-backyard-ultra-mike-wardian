<article class="article linear-article sticky-parent  article--no-img   " id="linear-article-2411447" data-ad-vars='{"account":"299403","zone":"\/299403\/outside.health\/running","sub_channel":"Running","sec":null,"page":"the-quarantine-backyard-ultra-is-perfectly-insane","terms":"[\"Health\",\"Running\"]","cat":"[\"coronavirus\",\"events\",\"running\",\"ultrarunning\"]","cluster":"in-stride","adcat":null,"author":"Martin Fritz Huber","content_type":"article_infinite_stack","hierarchy":"\/health\/running\/the-quarantine-backyard-ultra-is-perfectly-insane\/","companion":"false","preroll":"true","content_issue":"Outside Online","created":"2020-04-07T14:35:05-05:00","changed":"2020-04-07T14:28:20-05:00","node_id":"2411447","word_count":null,"affiliate_native":"not_applicable","disable_ads":"false","editor":"mmirhashem"}' data-url="/2411447/quarantine-backyard-ultra-mike-wardian">
