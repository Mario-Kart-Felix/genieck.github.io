		sandboxIframes();
		sandboxScripts();

		function OptanonWrapper() {

			// Run performance
			if(OptanonActiveGroups.match(/,2,/)){
				runComscore();
				runMormont();
				runGoogleAnalytics(false);
			} else {
				runGoogleAnalytics(true);
			}

			// Run functional
			if(OptanonActiveGroups.match(/,3,/)){

			}

			// Run targeting
			if(OptanonActiveGroups.match(/,4,/)){
				runAds();
				runIframes();
				runScripts();

				if(typeof runInlineAds === "function") {
					runInlineAds();
				}
			}
		}
