<div id="three-3443" class="section section-text-over-media section-text-over-image section-text-over-media-3443 has-text" data-viewport-height="">
  <div class="text text-over-media-inner center center normal">
    
      <h2 class="text-inner">
        Reef settlers
      </h2>
    
  </div>

  <div class="background-overlay">
    
  </div>

  

  <img alt="" data-landscape-src="https://news.bbcimg.co.uk/news/special/2015/newsspec_12190/media/1920x1080_dsc00641-hr.jpg" data-portrait-src="" class="section-background-image text-over-media-background-image retina-only" data-autoscale="cover">
</div>

