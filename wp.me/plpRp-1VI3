				// store ad reference so we can evoke refresh later
				gristAds.refreshingAds.push(
					googletag.defineSlot('/2154169/300x600_Sticky', [300, 600], 'sidebar-sticky-ad').addService(googletag.pubads())
				);
			}
			// define inline ad slots
			for (var i = 0 ; i < gristAds.inlineAds.length; i++) {
				if ( document.getElementById( gristAds.inlineAds[i].id ) ) {
					googletag.defineSlot(
						gristAds.inlineAds[i].slot,
						gristAds.inlineAds[i].size,
						gristAds.inlineAds[i].id )
						.addService(googletag.pubads());
				}
			}
		});
	</script>



<script id="google-ads-target-and-enable" type="text/javascript">

	googletag.cmd.push( function() {

		// set page-level targetting
		googletag.pubads().setTargeting( 'pid', gristAds.vars.pid );
		googletag.pubads().setTargeting( 'authors', gristAds.vars.authors );
		googletag.pubads().setTargeting( 'topics', gristAds.vars.categories );
		googletag.pubads().setTargeting( 'tags', gristAds.vars.tags );
		googletag.pubads().setTargeting( 'series', gristAds.vars.series );
		googletag.pubads().setTargeting( 'page_slug', gristAds.vars.slug );
		googletag.pubads().setTargeting( 'page_url',  gristAds.vars.canonical );

		// set page url for ads
		googletag.pubads().set( 'page_url', gristAds.vars.canonical );
		// settings and enable
		googletag.pubads().collapseEmptyDivs();
		googletag.pubads().enableSingleRequest();
		googletag.enableServices();

	});
</script>

	<script id="google-ads-display-post">
		googletag.cmd.push(function() {
			// display desktop ads
			if (gristAds.vars.isDesktop ) {
				googletag.display('sidebar-top-ad');
				googletag.display('sidebar-sticky-ad');
				googletag.display('bottom-banner');
				if ( ! gristAds.vars.isSponsored ) {
					setInterval(function() {
						googletag.pubads().refresh( gristAds.refreshingAds );
					}, gristAds.settings.refreshRate );
				}
			}
			// display inline ads that are found in the page
			for (var i = 0 ; i < gristAds.inlineAds.length; i++) {
				if ( document.getElementById( gristAds.inlineAds[i].id ) ) {
					googletag.display( gristAds.inlineAds[i].id );
				}
			}
		});
	</script>


