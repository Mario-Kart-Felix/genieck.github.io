                (function(){

                    function initGA(){
                            var anal_config = {"dimension5": "web", "dimension43": false, "dimension1": "Article", "dimension3": "/article/thomas-piketty-capital-ideology", "dimension22": "Tue, 14 Apr 2020 12:10:39 BST", "dimension10": "Tue, 14 Apr 2020 06:00:00 BST", "dimension41": "Tuesday", "dimension42": "06", "dimension9": "6", "dimension45": "Tue, 14 Apr 2020 06:00:00 BST", "dimension7": "Simon Kuper", "dimension4": "Long Reads", "dimension6": "Long Reads|Politics|Economics", "dimension19": "true", "dimension20": "2020-05", "dimension36": "31e5oenB2Gl", "dimension8": "3922", "dimension49": "null", "dimension50": "null", "dimension51": "null", "dimension48": "false", "dimension24": "50", "dimension46": "false", "location": "https://www.wired.co.uk/article/thomas-piketty-capital-ideology"};
                            anal_config[cnd_wi.GATracker.getDimensionByIndex('AD_BLOCKER')] = String(!window.ads_not_blocked);
                            var queryArgs = location.href.split('?');
                            if(queryArgs.length > 1){
                                queryArgs.shift();
                                anal_config['location'] += ('?' + queryArgs.join('&'));
                            }
                            cnd_wi.Store.set("cnd_wi_anal_config", anal_config);
                            cnd_wi.GATracker.SetAll(anal_config);

                        cnd_wi.GATracker.SendAll(cnd_wi.GATracker.SEND_HITTYPES.PAGEVIEW, {
                            "comscore": false
                        });
                    }
                    function onChange(){
                        if(cnd_wi.OneTrustManager.consentedPerformanceCookies){
                            cnd_wi.OneTrustManager.off("change", onChange);
                            initGA();
                        }
                    }
                    function onReady(){
                        if(cnd_wi.OneTrustManager.consentedPerformanceCookies){
                            initGA();
                        } else {
                            cnd_wi.OneTrustManager.on("change", onChange);
                        }
                    }

                    if(!cnd_wi.OneTrustManager.ready){
                        cnd_wi.OneTrustManager.once("ready", onReady);
                    } else {
                        if(cnd_wi.OneTrustManager.consentedPerformanceCookies){
                            initGA();
                        } else {
                            cnd_wi.OneTrustManager.on("change", onChange);
                        }
                    }

