<script>
    function PrintElem(elem)  {
        Popup($(elem).html());
    }

    function Popup(data) {
        var mywindow = window.open('', 'new div', 'height=500,width=700');
        mywindow.document.write('<html><head><title>Print Article</title>');
        /*optional stylesheet*/ //mywindow.document.write('<link rel="stylesheet" href="main.css" type="text/css" />');
        mywindow.document.write('</head><body >');
        mywindow.document.write(data);
        mywindow.document.write('</body ></html>');

        mywindow.print();
        mywindow.close();

        return true;
    }
    window.addEventListener('load',function() {

        $('.button__toggle-print-article').on('click', function () {
          var ID = $(this).data('id');
//            var elemToPrint = $('article[data-id="'+ID+'"]').innerHTML;
//            var stylesheet = $('link').first().attr('href');
        });

        $('body').on('click', '.button__toggle-print-article', function (e) {
          e.preventDefault();
          var div = $(this).closest('article.article-item').clone();
          div.find('.layout--comment-share').remove();
          div.find('.article-item__meta').remove();
          div.find('.people__read-more-link').remove();
          div.find('iframe').remove();
          div.find('broadstreet-zone-container').remove();
          div.find('.related-articles').remove();
          div.find('.tags-list').remove();
          var people_html = '';
          div.find('.people').each(function () {
            people_html += $(this).html();
          });
          div.find('.people').remove();
          div.find('.article-item__title').after(people_html);
          var data_id = $(this).data('id');
          console.log(data_id);
          var content_list_progress = $('.content-list__progressbar[data-id="' + data_id + '"]');
          console.log(content_list_progress);
          var window_href = content_list_progress.closest('a').attr('href');
          div.append('<p>Article Link: ' + window_href + '</p>');
          //div.detach('.layout--comment-share-in-article');
          PrintElem(div);
        });

      });

</script>
                        </div>
                    </div>
                </div>

            
        </main>
        <!-- end:main -->

    </div>
    <!-- end:content -->

