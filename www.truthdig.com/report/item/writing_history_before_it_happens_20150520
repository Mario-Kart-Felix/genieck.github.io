	    	<script>
      function TenUpGetCookie (cname) {
        var name = cname + '='
        var decodedCookie = decodeURIComponent(document.cookie)
        var ca = decodedCookie.split(';')
        for (var i = 0; i < ca.length; i++) {
          var c = ca[i]
          while (c.charAt(0) == ' ') {
            c = c.substring(1)
          }
          if (c.indexOf(name) == 0) {
            return c.substring(name.length, c.length)
          }
        }
        return ''
      }


            window.addEventListener('load',function() {
          var modal_message = document.getElementById('js-modal-message-login')
          if ('' === TenUpGetCookie('resetMyPass')) {
            modal_message.innerHTML = 'As a security measure, we ask that you <a href="https://www.truthdig.com/wp-login.php?action=lostpassword">reset your password</a> for the Truthdig site. <br> Thank you!'
          }
        })
      
	</script>
