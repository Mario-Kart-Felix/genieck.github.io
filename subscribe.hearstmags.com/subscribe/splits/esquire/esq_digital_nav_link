  <script type="text/javascript">
    function beforeSubmit() {
      $('#btn_submit').hide();
      $('#btn_processing').show();
    }

    var win_w = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;

    $(function(){
      /* Swap sidebar with header image */
      function swapHdr() {
        if (win_w <= 480) {
          $("#side").insertBefore("#hdr");
        } else {
          $("#hdr").insertBefore("#side");
        }
      }

      $(window).resize(function() {
        win_w = $(window).width();
        swapHdr();
      });

      /* CVV POPUP */
      var isiDevice = /ipad|iphone|ipod/i.test(navigator.userAgent.toLowerCase());
      var cvv_help = $("#cvv .help"),
        premium_info = $("#premium .info");

      if (!isiDevice) {
        $("#cvv").mouseenter(function(){
          cvv_help.fadeIn();
        }).mouseleave(function() {
          cvv_help.fadeOut();
        });
        $("#premium").mouseenter(function(){
          premium_info.fadeIn();
        }).mouseleave(function() {
          premium_info.fadeOut();
        });
      } else {
        $("#cvv").click(function(){
          cvv_help.toggle();
        });
        $("#premium").click(function(){
          premium_info.toggle();
        });
        $("#premium .cls_premium").click(function(){
          premium_info.fadeOut();
        });

      }

            

      /* INIT */
      swapHdr();
      //$("input[name=orig_referrer]").val();
    });

  </script>

