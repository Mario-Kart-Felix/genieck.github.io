<script>
  //global variables
  var $errorMessage = $(".error-message");
  var $emailInput = $(".text-input");
  var $form = $(".form-container");

    function setGACustomEvent(action) {
        gtag('event', [action, "Static Page", "ESQ Newsletter"].filter(Boolean).join(" | "), {
        'event_category': 'Email Capture',
        'event_label': "Esquire_ESQ_Weekly_Newsletter",
        'cd1': document.location,
        'cd72': authId});
    }

  //The user viewed the page so fire custom event.
  setGACustomEvent("Viewed");

  //when email input is focused, error message emptied
  $emailInput.on("focus", function() {
    $errorMessage.text(" ").show().removeClass("error-icon");
    $emailInput.removeClass("border");
  });
  // disable built-in browser form validation
  $form.attr("noValidate", true);
  $form.on("submit", function(e) {
    e.preventDefault();
    // if valid email, send data
    if ($emailInput.val() && $emailInput[0] && $emailInput[0].checkValidity()) {
      $errorMessage.hide();
      var response = grecaptcha.getResponse();
      if (response.length == 0) {
        e.preventDefault();
        $(this).attr("data-submit-please", "true");
        grecaptcha.execute();
      } else {
        $(this).find("input[name='recaptcha']").val(response);
      }
      //The user submitted an email address so fire custom event.
      setGACustomEvent("Submitted");
      if (signup()) {
        this.submit();
      }
      // otherwise display an error message
    } else {
      $errorMessage.text("Please enter a valid email address").show();
      $emailInput.addClass("border");
      $errorMessage.addClass("error-icon");
    }
  });

  function signup() {
    var rufusUrl = "https://preferencecenter.hearstmags.com/api/";
    var emailAddress = $(".text-input").val();

    $.ajax({
      async: false,
      url: rufusUrl + "preference/signup",
      type: "POST",
      contentType: "application/json",
      data: JSON.stringify({
        email: emailAddress,
        preferences: [{
          preferenceId: "579C4F1D-8F2C-4898-9F2E-044CF1071AA9",
          optinValue: "H"
        }],
        majorSource: "WNL",
        
            minorSource: "STAT+ESQ Newsletter"
              }),
      success: function() {
        //We got a successful POST
        submissionSuccess = true;
      },
      error: function() {
        //There was an error in the POST - we should NOT send a welcome email
        submissionSuccess = false;
      }
    });

    return submissionSuccess;
  }

</script></body></html>
