                    return window.bbcpage.loadModule(['istats-1'])
                        .then(function(istats) {
    
                            var trackLabels = {
                                region: region
                            };
    
                            for (var label in labels) {
                                trackLabels[label] = labels[label];
                            }
    
                            var linkType = labels.linkType || 'internal';
    
