				if( href_val === img_src && !$(this).parents().hasClass("email-signup-module") ){
					$(this).parent("a").addClass("gallery");
				}else{
					if( !$(this).parent("a").hasClass("no-target-blank") ){
						$(this).parent("a").attr('target','_blank');	
					}					
