         *  Action Tout Module Track
		 */
		actionToutModule( 119032 );
		
		/*
         *  Sidebar Community Module Track
		 */
		sidebarCommunityModule( 119032 );
		 		
		/*
		 * @function for print article
		 */
				
		/* 
		 * Calling Header, Footer Pixel Ads
		 */
		
		custom_targeting = false;
		if (key.length > 0 && values.length > 0) {
			custom_targeting = true;
		}
		
		var targetingArray             = new Array();
		targetingArray['tn_author']    = ['corey-r'];
		targetingArray['tn_articleid'] = [119032];
		targetingArray['tn_ptype']     = ['article'];
		targetingArray['tn_keyword']   = ['holocaust', 'israel', 'judaism'];
		targetingArray['tn_subject']   = ['biography', 'books-and-', 'cultural-c', 'culture', 'genocide-a', 'language-a', 'non-fictio'];
		targetingArray['tn_slp']       = []; 
		
					call_ad_new('leaderboard','tn_article','ad-leaderboard','leaderboard_1',targetingArray);		
				
		
		/*
		 * Call Right Sidebar Half Page Ad
		 */
				
			if ( typeof load_article_ads == 'function' && typeof load_article_ads != typeof undefined) { 
				if( !isMobile.any() || ( isMobile.any() &&  $('.abody-119032').length > 0 && !$('.abody-119032').hasClass('tn-live-blog')) ){
					//function_name is a function
					load_article_ads(); 	
				}			
			} 	 
					
		
