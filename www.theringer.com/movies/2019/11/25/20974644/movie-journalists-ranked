  <source srcset="https://cdn.vox-cdn.com/thumbor/9fCpDwLZtfi6j3WTzQUesTVoMwk=/0x0:1464x1000/320x0/filters:focal(0x0:1464x1000):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19394329/depp_fear_and_loathing.jpg 320w, https://cdn.vox-cdn.com/thumbor/O5KBEdET-JBvbVKILlZ3xD3m7kk=/0x0:1464x1000/520x0/filters:focal(0x0:1464x1000):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19394329/depp_fear_and_loathing.jpg 520w, https://cdn.vox-cdn.com/thumbor/HsAV5my-OXWpDAUpswzKdSZL4lA=/0x0:1464x1000/720x0/filters:focal(0x0:1464x1000):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19394329/depp_fear_and_loathing.jpg 720w, https://cdn.vox-cdn.com/thumbor/bOnzzD8th-VTHyP9kJuWjtDIEGg=/0x0:1464x1000/920x0/filters:focal(0x0:1464x1000):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19394329/depp_fear_and_loathing.jpg 920w, https://cdn.vox-cdn.com/thumbor/4NlAkpLslZ9hWp_CpAwzNSZoL4Y=/0x0:1464x1000/1120x0/filters:focal(0x0:1464x1000):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19394329/depp_fear_and_loathing.jpg 1120w, https://cdn.vox-cdn.com/thumbor/KvdI-fnx4z7CTOeEX0Z8rGIlxrM=/0x0:1464x1000/1320x0/filters:focal(0x0:1464x1000):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19394329/depp_fear_and_loathing.jpg 1320w, https://cdn.vox-cdn.com/thumbor/gNxqYOKMxzxZbIp7ShnJhy8a4U0=/0x0:1464x1000/1520x0/filters:focal(0x0:1464x1000):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19394329/depp_fear_and_loathing.jpg 1520w, https://cdn.vox-cdn.com/thumbor/kZuxuTkMwjUZQwoRO5bzKu0fHyM=/0x0:1464x1000/1720x0/filters:focal(0x0:1464x1000):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19394329/depp_fear_and_loathing.jpg 1720w, https://cdn.vox-cdn.com/thumbor/3SM2r2LLmBUvkM9FGftesEDW7do=/0x0:1464x1000/1920x0/filters:focal(0x0:1464x1000):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19394329/depp_fear_and_loathing.jpg